<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/btn1_0"
        android:layout_marginBottom="30dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="36dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn1_1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:text=""
        android:textSize="36dp"
        android:textColor="@color/teal_200"/>

    <Button
        android:id="@+id/btn0_1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/btn1_1"

        android:text=""
        android:textSize="36dp"
        android:textColor="@color/teal_200"/>

    <Button
        android:id="@+id/btn2_1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/btn1_1"
        android:layout_marginLeft="10dp"
        android:text=""
        android:textSize="36dp"
        android:textColor="@color/teal_200"/>

    <Button
        android:id="@+id/btn0_0"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_toLeftOf="@id/btn1_0"
        android:layout_above="@id/btn0_1"
        android:layout_marginRight="10dp"
        android:text=""
        android:textSize="36dp"
        android:textColor="@color/teal_200"/>

    <Button
        android:id="@+id/btn1_0"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/btn1_1"
        android:text=""
        android:textSize="36dp"
        android:textColor="@color/teal_200"/>

    <Button
        android:id="@+id/btn2_0"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_toRightOf="@id/btn1_0"
        android:layout_above="@id/btn2_1"
        android:layout_marginLeft="10dp"
        android:text=""
        android:textSize="36dp"
        android:textColor="@color/teal_200"/>

    <Button
        android:id="@+id/btn0_2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/btn0_1"
        android:layout_toLeftOf="@id/btn1_2"
        android:layout_marginRight="10dp"
        android:text=""
        android:textSize="36dp"
        android:textColor="@color/teal_200"/>

    <Button
        android:id="@+id/btn1_2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/btn1_1"
        android:layout_centerHorizontal="true"

        android:text=""
        android:textSize="36dp"
        android:textColor="@color/teal_200"/>

    <Button
        android:id="@+id/btn2_2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/btn2_1"
        android:layout_toRightOf="@id/btn1_2"
        android:layout_marginLeft="10dp"
        android:text=""
        android:textSize="36dp"
        android:textColor="@color/teal_200"/>

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/purple_700"
        android:backgroundTintMode="add"

        android:text="REINICIAR"
        android:textSize="30dp"
        app:rippleColor="@color/black" />


</RelativeLayout>